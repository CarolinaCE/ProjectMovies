        });*/
        // Build the html for 
        //$('td:last').append(html);
        // The delete was completed successfully, remove the row from the DOM
        $(this).closest('tr').remove();
    });

    // Click for submitting movies form
    $('#app-save-movie').on('click', function(e) {
        e.preventDefault();

        var form = $('#form-movies');

        // Validate form
        if (!form.valid()) {
            return;
        }

        // Build the object with values
        var data_form = {
            movieName:   $('#movie-name').val(),
            releaseYear: $('#release-year').val(),
            rating:      $('#rating').val(),
            action:      'insert'
        };

        // Get form's data and perform ajax request
        $.ajax({
            type:    'POST',
            dataType: 'JSON',
            data:    data_form,
            success: function(data, textStatus, request) {

                // Validate response
                if (data.success) {

                    // Update markup
                    data_form.releaseYear = (data_form.releaseYear) ? data_form.releaseYear : '--';
                    data_form.rating = (data_form.rating) ? data_form.rating : '--';

                    var html = '<tr>' +
                                    '<td>' + data_form.movieName + '</td>' +
                                    '<td>' + data_form.releaseYear + '</td>' + 
                                    '<td>' + data_form.rating + '</td>' + 
                                    '<td>' +
                                        '<div movie-id="' + '1' + '">' +
                                            '<span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span><a href="#" class="app-remove-movie"> Remove</a>' +
                                            '<span class="separator"> | </span>' +
                                            '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span><a href="#"> Update</a>' +
                                        '</div>' +
                                    '</td>' +
                                '</tr>';

                    // Append markup to last tr
                    $('#app-movies-table tr:last').after(html);

                    // Notify successful action to user
                    alert('Insert was successful');

                    // Hide modal
                    $('#moviesModal').modal('hide');
                } else {

                    // Something failed, notify the user
                    alert(data.cause);
                }
            }
        });
    });

    // Reset modal on hide
    $('#moviesModal ').on('hidden.bs.modal', function () {
        $('#form-movies')[0].reset();
        $('#form-movies').validate().resetForm();
    });     

</script>